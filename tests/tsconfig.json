{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "types": ["jest"],
    "declaration": true,
    "outDir": "./dist",
    "removeComments": true,
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./..",
    "paths": {
      "@/*": ["src/*"],
      "@fixtures/*": ["tests/fixtures/*"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
