    "target": "es5",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "types": [],
    "declaration": true,
    "outDir": "./dist",
    "removeComments": true,
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
